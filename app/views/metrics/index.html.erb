<h1>Listing metrics</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Units</th>
    <th>Frequency</th>
    <th>Seasonal</th>
    <th>Last updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @metrics.each do |metric| %>
  <tr>
    <td><%= metric.name %></td>
    <td><%= metric.units %></td>
    <td><%= metric.frequency %></td>
    <td><%= metric.seasonal %></td>
    <td><%= metric.last_updated %></td>
    <td><%= link_to 'Show', metric %></td>
    <td><%= link_to 'Edit', edit_metric_path(metric) %></td>
    <td><%= link_to 'Destroy', metric, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

